{
    "root": true,
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "commonjs"
    },
    "extends": ["eslint:recommended", "prettier"],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "rules": {
        "no-console": "warn",
        "no-unused-vars": "error",
        "no-unused-expressions": "error",
        "prefer-const": "error",
        "no-undef": "error",
        "no-var": "error"
    }
}
